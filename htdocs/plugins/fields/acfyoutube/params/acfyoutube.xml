				label="ACF_YOUTUBE_COLOR"
				description="ACF_YOUTUBE_COLOR_DESC"
				url="https://www.tassos.gr/joomla-extensions/advanced-custom-fields"
			/>
			<field name="@controls" type="nr_pro"
				label="ACF_YOUTUBE_CONTROLS"
				description="ACF_YOUTUBE_CONTROLS_DESC"
				url="https://www.tassos.gr/joomla-extensions/advanced-custom-fields"
			/>
			<field name="@disablekb" type="nr_pro"
				label="ACF_YOUTUBE_DISABLEKB"
				description="ACF_YOUTUBE_DISABLEKB_DESC"
				url="https://www.tassos.gr/joomla-extensions/advanced-custom-fields"
			/>
			<field name="@start" type="nr_pro"
				label="ACF_YOUTUBE_START"
				description="ACF_YOUTUBE_START_DESC"
				url="https://www.tassos.gr/joomla-extensions/advanced-custom-fields"
			/>
			<field name="@end" type="nr_pro"
				label="ACF_YOUTUBE_END"
				description="ACF_YOUTUBE_END_DESC"
				url="https://www.tassos.gr/joomla-extensions/advanced-custom-fields"
			/>
			<field name="@fs" type="nr_pro"
				label="ACF_YOUTUBE_FS"
				description="ACF_YOUTUBE_FS_DESC"
