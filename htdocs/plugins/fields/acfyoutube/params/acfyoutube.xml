			/>
			<field name="@cc_load_policy" type="nr_pro"
				label="ACF_YOUTUBE_CC_LOAD_POLICY"
				description="ACF_YOUTUBE_CC_LOAD_POLICY_DESC"
				url="https://www.tassos.gr/joomla-extensions/advanced-custom-fields"
