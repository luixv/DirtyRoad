			/>
			<field name="@hl" type="nr_pro"
				label="ACF_YOUTUBE_HL"
				description="ACF_YOUTUBE_HL_DESC"
				url="https://www.tassos.gr/joomla-extensions/advanced-custom-fields"
			/>
			<field name="@iv_load_policy" type="nr_pro"
				label="ACF_YOUTUBE_IV_LOAD_POLICY"
				description="ACF_YOUTUBE_IV_LOAD_POLICY_DESC"
				url="https://www.tassos.gr/joomla-extensions/advanced-custom-fields"
			/>
			<field name="@loop" type="nr_pro"
				label="ACF_YOUTUBE_LOOP"
				description="ACF_YOUTUBE_LOOP_DESC"
				url="https://www.tassos.gr/joomla-extensions/advanced-custom-fields"
			/>
			<field name="@modestbranding" type="nr_pro"
				label="ACF_YOUTUBE_MODESTBRANDING"
