<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="fieldparams">
		<fieldset name="fieldparams">
			<field name="size" type="radio" 
		        label="ACF_VIDEO_SIZE"
				description="ACF_VIDEO_SIZE_DESC"
		        class="btn-group btn-group-yesno"
		        default="fixed">
		            <option value="fixed">ACF_FIXED</option>
		            <option value="responsive">ACF_RESPONSIVE</option>
		    </field>
			<field name="width" type="text"
				label="ACF_YOUTUBE_WIDTH"
				description="ACF_YOUTUBE_WIDTH_DESC"
				size="40"
				default="480"
				showon="size:fixed"
			/>
			<field name="height" type="text"
				label="ACF_YOUTUBE_HEIGHT"
				description="ACF_YOUTUBE_HEIGHT_DESC"
				default="270"
				showon="size:fixed"
			/>
			
		    
		    <field name="@autoplay" type="nr_pro"
				label="ACF_YOUTUBE_AUTOPLAY"
				description="ACF_YOUTUBE_AUTOPLAY_DESC"
