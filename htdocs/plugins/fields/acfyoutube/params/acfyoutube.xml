			/>
			<field name="@rel" type="nr_pro"
				label="ACF_YOUTUBE_REL"
				description="ACF_YOUTUBE_REL_DESC"
				url="https://www.tassos.gr/joomla-extensions/advanced-custom-fields"
			/>
			<field name="@showinfo" type="nr_pro"
				label="ACF_YOUTUBE_SHOWINFO"
				description="ACF_YOUTUBE_SHOWINFO_DESC"
				url="https://www.tassos.gr/joomla-extensions/advanced-custom-fields"
			/>
		    
