<?xml version="1.0" encoding="utf-8"?>
<extension version="1.0" type="module" method="upgrade">
<name>Notice board general</name>
	<author>Guarneri Iacopo</author>
	<creationDate>23/01/2012</creationDate>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>iacopo.guarneri@gmail.com</authorEmail>
	<authorUrl>http://www.iacopo-guarneri.me/</authorUrl>
	<version>1.02</version>
	<description>plugin that allows you to manage notice board general</description>

	<files>
		<filename module="mod_notice_board_general">mod_notice_board_general.php</filename>
		<filename >index.html</filename>
	</files>
	
	<config>
		<fields name="params">
			<fieldset name="general" group="general" label="General Settings">
				<field type="spacer" name="spacer1" label="Use without community builder in PRO version" />
				<field name="admin_mail" type="list" default="yes" label="Send mail to admin" description="">
					<option value="yes">yes</option>
					<option value="no">no</option>
				</field>
				<field name="user_mail" type="list" default="yes" label="Send mail to user" description="">
					<option value="yes">yes</option>
					<option value="no">no</option>
				</field>
				<field name="pagination" type="list" default="10" label="pagination" description="">
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">4</option>
					<option value="5">5</option>
					<option value="10">10</option>
					<option value="15">15</option>
					<option value="20">20</option>
					<option value="30">30</option>
					<option value="50">50</option>
					<option value="50">100</option>
					<option value="50">200</option>
					<option value="50">300</option>
					<option value="50">500</option>
					<option value="50">1000</option>
					<option value="50">2000</option>
					<option value="50">5000</option>
				</field>
				<field name="style_pagination" type="radio" default="style2" label="Style pagination" description="">
					<option value="style1">Style 1</option>
					<option value="style2">Style 2</option>
				</field>
				
				<!-- INIZIO MODIFICA IACOPO -->
				<field name="show_smile" type="radio" default="no" label="Show Smile" description="">
					<option value="yes">yes</option>
					<option value="no">no</option>
				</field>
				<!-- FINE MODIFICA IACOPO -->
				
				<!-- INIZIO MODIFICA DIJO -->
				<field name="show_avatar" type="radio" default="no" label="Show avatar or username (only CB)" description="">
					<option value="yes">Avatar</option>
					<option value="no">Username</option>
					<option value="both">Both</option>
				</field>
				<!-- FINE MODIFICA DIJO -->
				<field name="show_link" type="radio" default="no" label="Show user link (only CB)" description="">
					<option value="yes">yes</option>
					<option value="no">no</option>
				</field>
				<field name="maxw" type="text" default="50" label="Max width avatar" description="" />
				<field name="maxh" type="text" default="50" label="Max height avatar" description="" />
				<field name="cb_template" type="text" default="" label="CB template" description="" />
				<field name="jquery" type="radio" default="1" label="JQuery" description="">
					<option value="1">enabled</option>
					<option value="0">disabled</option>
				</field>
				
				<field type="spacer" name="spacer2" label="Privacy options in PRO version" />
			</fieldset>
			<fieldset name="advanced" group="advanced" label="Advanced Options">
				<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
				<field name="filteringspacer10" type="spacer" hr="true" />
				<field name="cache" type="list" default="0" label="Caching" description="Select whether to cache the content of this module">
					<option value="1">Use global</option>
					<option value="0">No caching</option>
				</field>
				<field name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
			</fieldset>
		</fields>
	</config>
</extension>
